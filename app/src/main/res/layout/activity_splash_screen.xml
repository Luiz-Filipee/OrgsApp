<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.SplashScreen"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/activity_splash_screen_imageview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.3"
        android:src="@drawable/orgs_logo" />

    <TextView
        android:id="@+id/activity_splash_screen_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Orgs"
        android:textStyle="italic"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_splash_screen_imageview"
        android:gravity="center"/>

    <TextView
        android:id="@+id/activity_splash_screen_textview_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Bem-Vindo ao App que ira organizar sua vida"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_splash_screen_textview"
        android:gravity="center"/>

    <TextView
        android:id="@+id/activity_splash_screen_textview_produtor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Desenvolvido por Luiz Filipe M. Kato"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>