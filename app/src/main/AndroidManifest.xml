<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/orgs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/orgs_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Orgs"
        tools:targetApi="31">
        <activity android:name=".ui.activity.user.LoginActivity"
            android:theme="@style/Theme.Orgs.NoActionBar"/>
        <activity android:name=".ui.activity.user.ActivityForgotPassword"
            android:theme="@style/Theme.Orgs.NoActionBar"/>
        <activity android:name=".ui.activity.user.ActivtyEditaUser"
            android:theme="@style/Theme.Orgs.NoActionBar"/>
        <activity android:name=".ui.activity.user.CadastroUserActivity"
            android:theme="@style/Theme.Orgs.NoActionBar"/>
        <activity android:name=".ui.activity.user.PerfilUserActivity"
            android:theme="@style/Theme.Orgs.NoActionBar"/>
        <activity
            android:name=".ui.activity.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.produto.DetalheProdutoActivity" />
        <activity android:name=".ui.activity.produto.FormularioProdutoActivity" />
        <activity android:name=".ui.activity.produto.ListaProdutosActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>